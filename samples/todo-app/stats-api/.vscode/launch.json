{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Run Script: dev with Kubernetes",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "local-process-with-kubernetes.service"
        },
        {
            "name": "Kdo Launch",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Kdo Prelaunch",
            "runtimeExecutable": "kdo",
            "runtimeArgs": [
                "--namespace=kdo-todo-app",
                "--inherit=svc/stats-api",
                "--forward=9229:9229",
                "--exec",
                "--prekill=node",
                "--stdin",
                ".",
                "node",
                "--inspect-brk=0.0.0.0:9229",
                "--nolazy",
                "server.js"
            ],
            "address": "localhost",
            "port": 9229,
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Kdo Attach",
            "type": "node",
            "request": "attach",
            "preLaunchTask": "Kdo Preattach",
            "address": "localhost",
            "port": 9229,
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true
        },
        {
            "type": "node-terminal",
            "name": "Run Script: dev",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}"
        }
    ]
}